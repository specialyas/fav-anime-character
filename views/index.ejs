<body>
    <h1>Anime Characters</h1>
    <ul class="characters">
    <% for(let i=0; i < info.length; i++) {%>
        <li class="characters">
            <span><%= info[i].animeName %></span>
            <span><%= info[i].characterName %></span>
            <span><%= info[i].likes %></span>
            <span class='fa fa-thumbs-up'></span>
            <span class='fa fa-trash'></span>
        </li>
    <% } %>
    </ul>

    <h2>Add Your Favorite Anime Characters</h2>

    <form action="/addCharacter" method="POST">
        <input type="text" placeholder="Anime Name" name="animeName">
        <input type="text" placeholder="Character Name" name="characterName">
        <input type="submit">
    </form>
